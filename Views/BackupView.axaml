<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:EasySave.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="EasySave.Views.BackupView"
             x:DataType="vm:BackupViewModel">

    <Grid RowDefinitions="Auto,*,Auto">
        <StackPanel Grid.Row="0" Orientation="Horizontal" Spacing="10" Margin="0,0,0,20">
            <TextBlock Text="Backup Operations" 
                      FontSize="24"/>
            <Button Content="Refresh Projects" 
                    Command="{Binding RefreshProjectsCommand}"/>
        </StackPanel>

        <Grid Grid.Row="1" ColumnDefinitions="*,*">
            <!-- Project List -->
            <StackPanel Grid.Column="0" Margin="0,0,10,0">
                <TextBlock Text="Available Projects" 
                          FontSize="18"
                          Margin="0,0,0,10"/>
                <ListBox ItemsSource="{Binding AvailableProjects}"
                         SelectedItem="{Binding SelectedProject}"
                         Height="300">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel>
                                <TextBlock Text="{Binding Name}" FontWeight="Bold"/>
                                <TextBlock Text="{Binding LastBackup, StringFormat='Last backup: {0:g}'}"/>
                                <TextBlock Text="{Binding Size, StringFormat='Size: {0:F2} MB'}"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </StackPanel>

            <!-- Backup States -->
            <StackPanel Grid.Column="1">
                <TextBlock Text="Backup States" 
                          FontSize="18" 
                          Margin="0,0,0,10"/>
                    <DataGrid ItemsSource="{Binding BackupStates}"
                         AutoGenerateColumns="False"
                         IsReadOnly="True"
                         Height="300">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Name" Binding="{Binding Name}"/>
                        <DataGridTextColumn Header="Status" Binding="{Binding Status}"/>
                        <DataGridTextColumn Header="Progress" Binding="{Binding Progress}"/>
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>
        </Grid>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Spacing="10" 
                    Margin="0,10,0,0">
            <Button Content="Save Project" 
                    Command="{Binding SaveSelectedProjectCommand}"
                    IsEnabled="{Binding !IsBackupInProgress}"/>
        </StackPanel>

        <!-- Progress Bar -->
        <ProgressBar Grid.Row="2" 
                     IsVisible="{Binding IsBackupInProgress}"
                     Height="20"
                     Margin="0,10,0,0"/>
    </Grid>
</UserControl> 